project 'Tutorial07_Annotations/HavingFunWithSciChart.xcodeproj'
project 'Tutorial08_AddingMultipleAxes/HavingFunWithSciChart.xcodeproj'
project 'Tutorial09_AddingMultipleCharts/HavingFunWithSciChart.xcodeproj'

# Define a global platform for your project
platform :ios, '8.0'

# Define pods for target tutorials
use_frameworks!
pod 'SciChartâ€™, '2.0.0.1505'

# Define pods for target tutorials
